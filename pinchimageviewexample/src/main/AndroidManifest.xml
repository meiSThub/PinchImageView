            </intent-filter>
        </activity>
        <activity android:name="com.plum.pinchimageviewexample.withviewpager.PagerActivity" />
        <activity android:name="com.plum.pinchimageviewexample.zoomtransition.ThumbViewActivity" />
        <activity
